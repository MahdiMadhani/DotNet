@model InMemoryCaching.Models.Account.LoginViewModel
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Top content -->


<div class="container" style="direction:rtl;background-color:">
    @{
        if (!String.IsNullOrEmpty(ViewBag.errorMessage))
        {
            <h2 class="text-danger">@ViewBag.errorMessage</h2>
        }
       
    }

    <div class="row">
        <div class="col-xm-12 col-sm-9 col-md-9 col-lg-8 form-box" style="direction:;background-color:">
            <div class="form-top">
                <h3>ورود به سایت</h3>
                <p>لطفا آدرس ایمیل و رمز عبور خود را وارد نمایید</p>
                <div class="form-top-right">
                    <i class="fa fa-key"></i>
                </div>
            </div>

            <div class="form-bottom">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <input asp-for="EmailAddress " placeholder="آدرس ایمیل" class="form-username form-control empty-check-befor-submit" style="width:200px" />
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(model => model.ReturnUrl)
                        <input type="password" asp-for="Password" placeholder="رمز عبور" class="form-password form-control empty-check-befor-submit" style="width:200px" />
                    </div>
                    <button id="btnSubmit" type="submit" class="btn btn-primary">ورود</button>
                }
            </div>
        </div>
    </div>
</div>
